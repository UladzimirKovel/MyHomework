<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_200"
    android:orientation="vertical">

    <TextView
        android:id="@+id/brand_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/acb_text_size_18sp"
        tools:text="Mercedes" />

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_8dp"
        android:textSize="@dimen/acb_text_size_18sp"
        tools:text="Used car" />

    <TextView
        android:id="@+id/release_date_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/acb_text_size_18sp"
        android:layout_marginTop="@dimen/margin_top_8dp"
        tools:text="date" />

    <Button
        android:id="@+id/delete_notes_data"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/button_margin_start_150dp"
        android:layout_marginTop="@dimen/margin_top_8dp"
        android:background="@drawable/login_button"
        android:text="@string/delete_notes_button"
        android:textColor="#673AB7"
        android:textStyle="bold" />

    <Button
        android:id="@+id/share_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_button"
        android:textColor="#673AB7"
        android:textStyle="bold"
        android:text="@string/share"/>
</LinearLayout>